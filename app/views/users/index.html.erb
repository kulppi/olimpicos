<h1>Listing users</h1>

<table>
  <tr>
    <th>Full name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Description</th>
    <th>Password hash</th>
    <th>Password salt</th>
    <th>Country</th>
    <th>Active</th>
    <th>City</th>
    <th>Gender</th>
    <th>Image</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.description %></td>
    <td><%= user.password_hash %></td>
    <td><%= user.password_salt %></td>
    <td><%= user.country_id %></td>
    <td><%= user.active %></td>
    <td><%= user.city_id %></td>
    <td><%= user.gender %></td>
    <td><%= user.image %></td>
    <td><%= user.active %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

